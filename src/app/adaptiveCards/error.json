{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "{{subject}}",
                    "size": "Medium"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "{{message}}",
                                    "weight": "Bolder",
                                    "wrap": true
                                }
                            ],
                            "height": "stretch",
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://raw.githubusercontent.com/ringcentral/bugsnag-notification-app/main/icon/82%20-%20Errors%20Copy.png",
                                    "size": "Medium"
                                }
                            ]
                        }
                    ],
                    "separator": true
                },
                {
                    "type": "TextBlock",
                    "text": "Stack Trace",
                    "weight": "Bolder",
                    "size": "Medium",
                    "spacing": "None"
                },
                {
                    "type": "TextBlock",
                    "text": "{{stackTrace}}",
                    "size": "Medium",
                    "spacing": "None"
                },
                {
                    "type": "FactSet",
                    "facts": [
                        {
                            "title": "Severity",
                            "value": "{{severity}}"
                        },
                        {
                            "title": "Status",
                            "value": "{{status}}"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "View in Bugsnag",
                    "url": "{{url}}"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://github.com/ringcentral/github-notification-app/blob/main/icons/feedback-32.png?raw=true",
                            "size": "Small",
                            "style": "Person",
                            "width": "16px"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Feedback (Any suggestions, or issues about the Bugsnag notification app?)](https://github.com/ringcentral/bugsnag-notification-app/issues/new)",
                            "weight": "Lighter",
                            "wrap": true,
                            "size": "Small"
                        }
                    ]
                }
            ]
        }
    ]
}
